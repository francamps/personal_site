extends layout

block navigation
  header.nav-wrap.animated.fadeInUp
    div.nav-top
      div.nav-logo(onclick="location.href='/index.html'")
    div.nav-tagline
      h4 Franc.ly
      span.tagline Coder and storyteller
    nav
      ul
      li.nav-left
        a(id="about" href="/bio.html") Who
      li.nav-left
        a(id="about" href="/work.html") What
      li.nav-left
        a(id="work" href="/articles/page/0/index.html") Writing
      - var article = env.helpers.getArticles(contents)[0]
      li.nav-left.nav-left-indent
        a(id="newest" href=article.url)= article.title
      li.nav-left.social(style="margin-top:50px")
        a(href="https://github.com/francamps")
          img(src="/css/images/social/github.png" width="32px")
        a(href="https://vimeo.com/franccampsfebrer")
          img(src="/css/images/social/vimeo.png" width="32px")
        a(href="http://www.twitter.com/francamps")
          img(src="/css/images/social/twitter.png" width="32px")
        a(href="https://www.linkedin.com/pub/franc-camps-febrer/12/209/860")
          img(src="/css/images/social/linkedin.png" width="32px")
        a(href="mailto:hi@franc.ly")
          img(src="/css/images/social/mail.png" width="32px")

block wrapper
  div#wrapper
    block navigation

